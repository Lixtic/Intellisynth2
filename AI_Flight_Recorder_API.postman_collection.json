	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-refresh token if needed",
					"if (pm.globals.get('token_expiry') && new Date() > new Date(pm.globals.get('token_expiry'))) {",
					"    console.log('Token expired, clearing...');",
					"    pm.globals.unset('token');",
					"    pm.globals.unset('token_expiry');",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-store authentication token",
					"if (pm.request.url.path.includes('auth/login') && pm.response.code === 200) {",
					"    const response = pm.response.json();",
					"    if (response.access_token) {",
					"        pm.globals.set('token', response.access_token);",
					"        // Set expiry time (assuming 1 hour default)",
					"        const expiry = new Date();",
					"        expiry.setHours(expiry.getHours() + 1);",
					"        pm.globals.set('token_expiry', expiry.toISOString());",
					"        console.log('Token stored:', response.access_token.substring(0, 20) + '...');",
					"    }",
					"}",
					"",
					"// Log response status",
					"if (pm.response.code >= 400) {",
					"    console.log('‚ùå Request failed:', pm.response.code, pm.response.status);",
					"} else {",
					"    console.log('‚úÖ Request successful:', pm.response.code, pm.response.status);",
					"}"
				]
			}
		}
